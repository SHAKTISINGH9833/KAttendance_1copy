<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HolidayListActivity">

  <LinearLayout
    android:id="@+id/nearby_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:orientation="vertical">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="28dp"
      android:gravity="center"
      android:layout_marginLeft="40dp"
      android:layout_marginRight="40dp"
      android:layout_marginBottom="8dp"
      android:layout_marginTop="4dp"
      android:layout_gravity="center_vertical"
      android:orientation="horizontal" >
      <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mumbai_btn"
        android:layout_weight="1"
        android:text="Mumbai"
        android:background="@drawable/rounded_left_white_filled"
        android:textColor="@color/white"
        android:textAllCaps="false"/>
      <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/delhi_btn"
        android:layout_weight="1"
        android:text="Delhi"
        android:background="@drawable/rounded_right_white_outline"
        android:textColor="#000000"
        android:textAllCaps="false"/>
    </LinearLayout>
  </LinearLayout>

  <androidx.viewpager.widget.ViewPager
    android:id="@+id/viewpager"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

</LinearLayout>
