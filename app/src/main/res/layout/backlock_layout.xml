<?xml version="1.0" encoding="utf-8"?>
<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:shrinkColumns="*"
  android:stretchColumns="*"
  >



  <TableRow
    android:id="@+id/tableRow2"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <TextView
      android:id="@+id/txtDateList"
      android:layout_weight="1"
      android:text="For each TextView in TableRow"
      android:textColor="#fb5404"
      android:layout_width="60dp"
      android:padding="10dip"
      android:gravity="left"/>

    <TextView
      android:id="@+id/txtTimeInList"
      android:layout_weight="1"

      android:textColor="#fb5404"
      android:layout_width="60dp"
      android:text="For each TextView in TableRow replace  with 0dp and use weight instead"
      android:padding="10dip"
      android:singleLine="false"
      android:gravity="start"/>


    <TextView
      android:id="@+id/txtTimeOutList"
      android:layout_weight="1"
      android:layout_width="60dp"
      android:text="For each TextView in TableRow"
      android:textColor="#fb5404"
      android:padding="20dip"
      android:singleLine="false"
      android:gravity="start"/>
    <ImageButton
      android:id="@+id/edite"
      android:layout_weight="0"
      android:layout_width="35dp"
      android:text="For each TextView in TableRow"
      android:textColor="#fb5404"
      android:padding="40dip"
      android:background="@color/white"
      android:src="@drawable/pencil"
      android:singleLine="false"
      android:gravity="center_vertical"

      />

  </TableRow>



</TableLayout>

